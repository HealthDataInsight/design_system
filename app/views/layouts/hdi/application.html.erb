<% content_for :body do %>
  <!--
    This example requires updating your template:

    ```
    <html class="h-full bg-white">
    <body class="h-full">
    ```
  -->
  <div data-controller="sidebar">
    <!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
    <div data-sidebar-target="menu" class="sidebar-off-canvas-container hidden opacity-0" role="dialog" aria-modal="true">
      <!--
        Off-canvas menu backdrop, show/hide based on off-canvas menu state.

        Entering: "transition-opacity ease-linear duration-300"
          From: "opacity-0"
          To: "opacity-100"
        Leaving: "transition-opacity ease-linear duration-300"
          From: "opacity-100"
          To: "opacity-0"
      -->
      <div class="sidebar-off-canvas-backdrop"></div>

      <div class="sidebar-off-canvas">
        <!--
          Off-canvas menu, show/hide based on off-canvas menu state.

          Entering: "transition ease-in-out duration-300 transform"
            From: "-translate-x-full"
            To: "translate-x-0"
          Leaving: "transition ease-in-out duration-300 transform"
            From: "translate-x-0"
            To: "-translate-x-full"
        -->
        <div class="sidebar-off-canvas-inner">
          <!--
            Close button, show/hide based on off-canvas menu state.

            Entering: "ease-in-out duration-300"
              From: "opacity-0"
              To: "opacity-100"
            Leaving: "ease-in-out duration-300"
              From: "opacity-100"
              To: "opacity-0"
          -->
          <div class="sidebar-off-canvas-close-button-container">
            <button data-action="sidebar#hide" type="button" class="sidebar-off-canvas-close-button">
              <span class="sr-only">Close sidebar</span>
              <svg class="heroicon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <!-- Sidebar component, swap this element with another sidebar if you like -->
          <div class="sidebar">
            <div class="sidebar-header">
              <img class="sidebar-logo" src="/health-data-insight-logo.png" alt="Health Data Insight">
            </div>
            <nav class="sidebar-content">
              <ul role="list" class="sidebar-list">
                <%= render 'hdi/navigation' %>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>

    <!-- Static sidebar for desktop -->
    <div class="sidebar-container">
      <!-- Sidebar component, swap this element with another sidebar if you like -->
      <div class="sidebar">
        <div class="sidebar-header">
          <img class="sidebar-logo" src="/health-data-insight-logo.png" alt="Health Data Insight">
        </div>
        <nav class="sidebar-content">
          <ul role="list" class="sidebar-list">

            <%= render 'hdi/navigation' %>

            <li class="sidebar-user-info">
              <%#= render 'signed_in_user_info' %>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <div class="banner">
      <button type="button" data-action="sidebar#show" class="banner-menu-button">
        <span class="sr-only">Open sidebar</span>
        <svg class="heroicon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
      <div class="banner-title">HDI Portal</div>
      <a href="#">
        <span class="sr-only">Your profile</span>
        <%#= current_user_image_tag %>
      </a>
    </div>

    <main class="lg:pl-72">
      <div class="xl:pr-96">
        <div class="px-4 py-10 sm:px-6 lg:px-8 lg:py-6">

            <%= yield :breadcrumbs %>

          <!-- Main area -->
          <% if false && user_signed_in? %>
            <div>
              <!-- <p>Normalized User Profile:<%#= JSON.pretty_generate(@user[:info])%></p> -->
              <p>Full User Profile: <%= JSON.pretty_generate(session[:userinfo]) %></p>
              <p>Expiry: <%= Time.at(session[:userinfo]['exp']) %></p>
              <%#= JSON.pretty_generate(session[:userinfo].keys) %>
            </div>
          <% end %>

          <%= render 'layouts/alert_and_notice' %>

          <%= yield %>
        </div>
      </div>
    </main>

    <aside class="hdi-sidebar-border fixed inset-y-0 right-0 hidden w-96 overflow-y-auto border-l px-4 py-6 sm:px-6 lg:px-8 xl:block">
      <!-- Secondary column (hidden on smaller screens) -->
    </aside>
  </div>
<% end %>

<%= render template: 'layouts/hdi/full_page' %>
