<% if controller.navigation_items.present? %>
  <nav aria-label="Menu">
    <ul role="list" class="-mx-2 space-y-1">
      <%# Rails.application.routes.recognize_path() %>
      <!-- Home -->
      <%= hdi_sidebar_navigation_svg('Home', root_path, current_page?(root_path)) do %>
        <!-- Heroicon name: outline/home -->
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
      <% end %>

      <!-- Navigation Items -->
      <% controller.navigation_items.each do |item| %>
        <li>
          <%= hdi_sidebar_navigation_svg(item[:label], item[:path], params[:controller]==item[:options][:controller], item[:options]) do %>
            <%= item[:options][:icon].html_safe if item[:options][:icon].present? %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
