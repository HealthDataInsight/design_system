<%= form_with(model: assistant) do |form| %>
  <%= form.ds_error_summary %>

  <%#= form.ds_label(:title, text: 'What is your title?' )%>

  <%= form.ds_fieldset legend: "Input fields" do %>
    <%= form.ds_text_field :title, width: 20, hint: "ds_text_field", class: "#{brand}-input--width-30" %>
    <%= form.ds_phone_field :phone, width: 20, hint: "ds_phone_field" %>
    <%= form.ds_email_field :email, width: 20, hint: "ds_email_field" %>
    <%= form.ds_url_field :website, hint: "ds_url_field" %>
    <%= form.ds_file_field :cv %>
    <%= form.ds_password_field :password, hint: "ds_password_field", class: "#{brand}-input--width-30" %>
    <%= form.ds_number_field :age, width: 3, hint: "ds_number_field" %>
    <%= form.ds_text_area :description, hint: "ds_text_area" %>
    <%= form.ds_date_field :date_of_birth, hint: "ds_date_field", date_of_birth: true %>
  <% end %>

  <%= form.ds_fieldset legend: "Checkboxes" do %>
    <%= form.ds_collection_check_boxes :desired_filling, @fillings, :id, :name, :description, hint: "ds_collection_check_boxes" %>

    <%#= form.ds_check_boxes_fieldset :desired_filling, multiple: true, hint: "ds_check_boxes_fieldset" do %>
      <%#= form.ds_check_box :desired_filling, { multiple: true, link_errors: true }, :pastrami %>
      <%#= form.ds_check_box :desired_filling, { multiple: true, link_errors: true }, :cheddar %>
    <%# end %>

    <%= form.ds_check_boxes_fieldset :terms_agreed, multiple: false, hint: "ds_check_boxes_fieldset" do %>
      <%= form.ds_check_box :terms_agreed, { multiple: false, link_errors: true }, true, false %>
    <% end %>
  <% end %>

  <%= form.ds_fieldset legend: "Selects" do %>
    <%= form.ds_collection_select :role_id, Role.all, :id, :title, hint: "ds_collection_select", prompt: "Please select", include_blank: false %>
    <%= form.ds_select :department_id, options_for_select(@departments.map { |department| [department.title, department.id] }), prompt: "Please select", include_blank: false, hint: "ds_select" %>
  <% end %>

  <%= form.ds_fieldset legend: "Radio buttons" do %>
    <%= form.ds_collection_radio_buttons :colour, @colours, :id, :title, :description, hint: "ds_collection_radio_buttons" %>

    <%= form.ds_radio_buttons_fieldset :lunch_option, hint: "ds_radio_buttons_fieldset" do %>
      <%= form.ds_radio_button :lunch_option, "Salad", link_errors: true %>
      <%= form.ds_radio_button :lunch_option, "Jacket potato" %>
    <% end %>
  <% end %>

  <%= form.ds_submit do %>
    <a class="govuk-button govuk-button--secondary" href="/assistants">
      Cancel
    </a>
  <% end %>
<% end %>
