<%= form_with(model: assistant) do |form| %>
    <%= form.ds_error_summary %>

    <%= form.ds_fieldset legend: "Input fields" do %>
      <%= form.ds_text_field :title, width: 20, hint: "ds_text_field" %>

      <%= form.ds_phone_field :phone, width: 20, hint: "ds_phone_field" %>

      <%= form.ds_email_field :email, width: 20, hint: "ds_email_field" %>

      <%= form.ds_url_field :website, hint: "ds_url_field" %>

      <%= form.ds_file_field :cv, label: "Please upload your CV" %>

      <%= form.ds_password_field :password, hint: "ds_password_field" %>

      <%= form.ds_number_field :age, width: 3, hint: "ds_number_field" %>

      <%= form.ds_text_area :description, hint: "ds_text_area" %>

      <%= form.ds_date_field :date_of_birth, hint: "For example, 15 3 1994", legend: "What is your date of birth?", hint: "ds_date_field" %>
    <% end %>

    <%= form.ds_fieldset legend: "Select" do %>
      <%= form.ds_collection_select :role_id, @roles, :id, :title, label: "Role", hint: "ds_collection_select", prompt: "Please select", include_blank: false %>

      <%= form.ds_select :department_id, options_for_select(@departments.map { |department| [department.title, department.id] }), label: "Department", hint: "ds_select", prompt: "Please select", include_blank: false %>
    <% end %>

    <%= form.ds_fieldset legend: "Radio buttons" do %>
      <%= form.ds_collection_radio_buttons :colours, @colours, :id, :title, :description, legend: "What is your favourite colour?", hint: "ds_collection_radio_buttons" %>

      <%= form.ds_radio_buttons_fieldset :lunch_option, legend: "What do you want to have for lunch?", hint: "ds_radio_buttons_fieldset" do %>
        <%= form.ds_radio_button :lunch_option, "Salad", link_errors: true %>
        <%= form.ds_radio_button :lunch_option, "Jacket potato" %>
      <% end %>
    <% end %>

    <%= form.ds_fieldset legend: "Checkboxes" do %>
      <%= form.ds_collection_check_boxes :desired_filling, @fillings, :id, :name, :description, legend: "What do you want in your sandwich?", hint: "ds_collection_check_boxes" %>

      <%= form.ds_check_boxes_fieldset :terms_agreed, multiple: false, legend: "Do you agree to the terms?", hint: "ds_check_boxes_fieldset" do %>
        <%= form.ds_check_box :terms_agreed, true, multiple: false, label: "Yes, I agree", link_errors: true %>
      <% end %>
    <% end %>

    <%= form.ds_submit %>
    <%= form.ds_submit "Cancel", secondary: true %>
<% end %>
