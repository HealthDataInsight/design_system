<%= form_with(model: assistant) do |form| %>
    <%= form.ds_error_summary %>

    <%= form.ds_fieldset legend: 'Input fields' do %>
      <%= form.ds_text_field :title, width: 20, hint: "Label with hint text. Field with character width." %>

      <%= form.ds_date_field :date_of_birth, hint: "For example, 15 3 1994", legend: "What is your date of birth?", hint: "Enter an arbitrary date" %>

      <%= form.ds_text_area :description, hint: "A textarea with hint text." %>

      <%= form.ds_file_field :cv %>
    <% end %>

    <%= form.ds_collection_select :feature, @features, :id, :name, label: "Features (ds_collection_select)", prompt: "Please select", include_blank: false %>

    <%= form.ds_select :department_id, options_for_select([
      ['Sales', Department.find_by(title: 'Sales').id],
      ['Marketing', Department.find_by(title: 'Marketing').id],
      ['Finance', Department.find_by(title: 'Finance').id]
    ]), label: "Department (ds_select)", prompt: "Please select", include_blank: false %>

    <%= form.ds_collection_check_boxes :tasks, @tasks, :id, :title, legend: "What tasks do you want to do?", hint: "Checkboxes with optional legend (collection_check_boxes)" %>

    <%= form.ds_check_boxes_fieldset :terms_agreed, multiple: false, legend: "Do you agree to the terms?", hint: "Add checkbox(es) individually with fieldset" do %>
      <%= form.ds_check_box :terms_agreed, true, multiple: false, label: "Yes, I agree", link_errors: true %>
    <% end %>

    <%= form.ds_radio_buttons_fieldset :lunch_option, legend: "What do you want to have for lunch?", hint: "ds_radio_buttons_fieldset" do %>
      <%= form.ds_radio_button :lunch_option, 'Salad', link_errors: true %>
      <%= form.ds_radio_button :lunch_option, 'Jacket potato' %>
    <% end %>

    <%= form.ds_submit %>
<% end %>
