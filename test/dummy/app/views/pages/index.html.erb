<%=
design_system do |ds|
  ds.breadcrumb 'One', root_path
  ds.breadcrumb 'Two', root_path
  ds.breadcrumb 'Three', root_path

  ds.main_heading 'Page#index heading'

  ds.table do |table|
	  table.caption = 'Name and Age'

	  table.add_column('Name', data: {'toggle': "table" , 'sort-name': "name" , 'sort-order': "desc", 'pagination':"false"} )
	  table.add_numeric_column('Age', data: { sortable: false })
	  
	  table.add_row do |row|
 		  row.add_cell('John Doe', data: { id: 1 })
 		  row.add_cell(30, data: { id: 2 })
 	  end
	  table.add_row 'John Doe', 30
  end
  # ds.form @assistant
end
%>
