<%=
design_system do |ds|
  ds.breadcrumb 'One', root_path
  ds.breadcrumb 'Two', root_path
  ds.breadcrumb 'Three', root_path

  ds.main_heading 'Page#index heading'

  ds.table do |table|
	  table.caption = 'Name and Age'
	  table.add_header do |header|
	     header.add_cell('Name', data: {'toggle': "table" , 'sort-name': "name" , 'sort-order': "desc", 'pagination':"false"} )
	     header.add_numeric_cell('Age', data: { sortable: false })
	  end
	  
	  table.add_row do |row|
 	     row.add_cell('John Doe', data: { id: 1 })
 	     row.add_numeric_cell('30', data: { id: 2 })
 	  end
  end
  # ds.form @assistant
end
%>
