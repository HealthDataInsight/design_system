<%= ds_heading 'Summary List' %>
<%=
ds_summary_list do |list|
  list.add_row('Name', 'John Doe') do |row|
    row.add_action('Root', path: root_path, hidden_text: 'name')
    row.add_action('Change', hidden_text: 'name')
  end
  list.add_row('Age', 30) do |row|
    row.add_action('View')
  end
  list.add_row('Email') do |row|
    row.add_value('Enter email information', path: root_path)
    row.add_action('View')
  end
  list.add_row('Contact') do |row|
    row.add_value('0123456789')
    row.add_value('john.doe@email.com')
    row.add_action('View')
  end
end
%>

<%= ds_heading 'Table' %>
<%=
ds_table(data: { test: 'table' }) do |table|
  table.caption = 'Table Caption'

  table.add_column('Name', data: {'toggle': "table" , 'sort-name': "name" , 'sort-order': "desc", 'pagination':"false"} )
  table.add_numeric_column('Age', data: { sortable: false })
  table.add_column('Medication')
  table.add_column('How much')

  table.add_row do |row|
    row.add_cell('John Doe', data: { id: 1 })
    row.add_cell(30, data: { id: 2 })
    row.add_cell('Ibuprofen')
    row.add_cell('2 pills')
  end
  table.add_row 'John Doe', 25, 'Continuous combined hormone replacement therapy (HRT) tablets, capsules and patches', '2 pills'
  table.add_row 'John Doe', 40, 'Ibuprofen', '2 pills'
  table.add_row 'John Doe', 6, 'Ibuprofen', '1 pill'
end
%>

<%= ds_heading 'Tab' %>
<%=	
ds_tab do |tab|
  tab.title = 'Contents'
  #(name, content, id, selected)
  tab.add_tab_panel('Profile', nil, 'profile',selected: true) do
	  ds_table do |table|
		  table.caption = 'Profile'
		  table.add_column('Name')
		  table.add_column('Gender')
		  table.add_numeric_column('Age')
		  table.add_row 'Ryan', 'Male', 30
	  end
  end
  tab.add_tab_panel('Dashboard','this is dashboard' ,'dashboard')
  tab.add_tab_panel('Settings', 'this is settings','settings')
  tab.add_tab_panel('Contacts', 'this is contacts', 'contacts')
end
  
%>

