<%=
ds_fixed_elements do |ds|
  ds.breadcrumb 'One', root_path
  ds.breadcrumb 'Two', root_path
  ds.breadcrumb 'Three', root_path

  ds.main_heading 'Page#index heading'

  # ds.form @assistant
end
%>

<%=
ds_table do |table|
  table.caption = 'Name and Age'

  table.add_column('Name', data: {'toggle': "table" , 'sort-name': "name" , 'sort-order': "desc", 'pagination':"false"} )
  table.add_numeric_column('Age', data: { sortable: false })

  table.add_row do |row|
    row.add_cell('John Doe', data: { id: 1 })
    row.add_cell(30, data: { id: 2 })
  end
  table.add_row 'John Doe', 30
end
%>

<%=	
ds_tab do |tab|
  tab.title = 'Contents'
  #(name, content, id, selected)
  tab.add_tab_panel('Profile',
                    ds_table do |table|
                      table.caption = 'Profile'
                      table.add_column('Name')
                      table.add_column('Gender')
                      table.add_numeric_column('Age')
                      table.add_row 'Ryan', 'Male', 30
                    end,
                    'profile',
                    sel: true)
  tab.add_tab_panel('Dashboard','this is dashboard' ,'dashboard')
  tab.add_tab_panel('Settings', 'this is settings','settings')
  tab.add_tab_panel('Contacts', 'this is contacts', 'contacts')
end
  
%>

<!--style=[secondary warning reverse] default is primary-->
<%= ds_start_button('Start now', '#', {'data-scrollable': 'Y'}) %>

<%= ds_button_tag 'Save and continue', style: 'primary', 'data-id': 1 %>

<%= ds_button_tag 'Reset', type: 'reset', disabled: true %>

<%=
ds_table do |table|
  table.caption = 'Assistants'
  table.add_column('Title')
  @assistants.each do |assistant|
    table.add_row assistant.title
  end
end
%>

<%= ds_pagination(@assistants) %>
